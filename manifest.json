{
    "manifest_version": 3,
    "name": "AI Web Translator",
    "version": "1.0",
    "description": "Translates the current web page using AI.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/ait16.png",
            "48": "images/ait48.png",
            "128": "images/ait128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "images/ait16.png",
        "48": "images/ait48.png",
        "128": "images/ait128.png"
    }
}